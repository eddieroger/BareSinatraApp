!!! html
%html{:lang => 'en'}
	%head
		%meta{:charset => 'utf8'}
		%title
			= settings.app_name || "Sinatra Bare App"
			- if @page_title
				|
				= @page_title
		%meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
		%meta{:description => ''}
		%meta{:name => 'author', :content => 'Eddie Roger <me-at-eddieroger.com>'}
		%link{:rel => 'stylesheet', :href => '//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css'}
		%link{:rel => 'stylesheet', :href => '/css/site.css'}

	%body
		.navbar.navbar-fixed-top{:role => 'navigation', :style => 'background-color: orange;'}
			.container
				.navbar-header
					%button.navbar-toggle{:type => 'button', :data => {:toggle => 'collapse', :target => '.navbar-collapse'}}
						%span.sr-only Toggle Navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand{:href => '/'}= settings.app_name
				.collapse.navbar-collapse
					%ul.nav.navbar-nav
						%li 
							%a{:href => '/'}Navigation Item
					%ul.nav.navbar-nav.navbar-right
						- if current_user
							%li
								%a{:href => '/auth/logout'} Logout
						- else
							%li
								%a{:href => '/auth/login'} Login
		.container
			= yield

		%script{:src => '//code.jquery.com/jquery.js'}
		%script{:src => '//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js'}